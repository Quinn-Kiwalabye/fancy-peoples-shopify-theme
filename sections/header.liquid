<div class="header-wrapper" data-section-id="{{ section.id }}" data-section-type="header-section">
  <header class="site-header">
    <div class="header-grid">
      <!-- Left side - Contact Us -->
      <div class="header-left">
        <a href="/pages/contact-us" class="contact-link">
          <span class="icon-plus">+</span>
          Contact Us
        </a>
      </div>
      
      <!-- Center - Logo -->
      <div class="header-center">
        <div class="site-logo">
          <a href="{{ routes.root_url }}" class="logo-link">
            {% if section.settings.logo %}
              <img src="{{ section.settings.logo | image_url: width: section.settings.logo_max_width }}" 
                   alt="{{ shop.name }}" 
                   class="logo-image"
                   width="{{ section.settings.logo_max_width }}"
                   height="auto">
            {% else %}
              <span class="site-name">{{ shop.name }}</span>
            {% endif %}
          </a>
        </div>
      </div>
      
      <!-- Right side - Icons -->
      <div class="header-right">
        <div class="header-icons">
          <a href="{{ routes.cart_url }}" class="header-icon cart-icon">
            <svg viewBox="0 0 20 20"><path d="M18 17H6c-.6 0-1-.4-1-1V6H4c-.6 0-1-.4-1-1s.4-1 1-1h2c.6 0 1 .4 1 1v1h12c.4 0 .7.2.9.6.2.4.1.8-.2 1.1l-2.9 2.9L19 14c.1.5-.2 1-.7 1.1-.5.1-1-.2-1.1-.7l-1.3-3.9 2.1-2.1H8v9h10c.6 0 1 .4 1 1s-.4 1-1 1z"/></svg>
          </a>
          <a href="{{ routes.account_url }}" class="header-icon account-icon">
            <svg viewBox="0 0 20 20"><path d="M10 12c-2.8 0-5-2.2-5-5s2.2-5 5-5 5 2.2 5 5-2.2 5-5 5zm0-9c-2.2 0-4 1.8-4 4s1.8 4 4 4 4-1.8 4-4-1.8-4-4-4zM18 18H2v-1c0-2.8 2.2-5 5-5h6c2.8 0 5 2.2 5 5v1zM8 13c-2.2 0-4 1.8-4 4h12c0-2.2-1.8-4-4-4H8z"/></svg>
          </a>
          <a href="{{ routes.search_url }}" class="header-icon search-icon">
            <svg viewBox="0 0 20 20"><path d="M18.9 17.1l-4.4-4.4c.9-1.2 1.5-2.7 1.5-4.2 0-3.9-3.1-7-7-7S2 4.7 2 8.5s3.1 7 7 7c1.6 0 3-.5 4.2-1.5l4.4 4.4c.2.2.4.2.6 0l.7-.7c.2-.2.2-.4 0-.6zM4 8.5C4 5.9 6 4 9 4s5 1.9 5 4.5-2 4.5-5 4.5-5-1.9-5-4.5z"/></svg>
          </a>
          <button type="button" class="header-icon menu-toggle" id="menuToggle" aria-expanded="false">
            <span class="menu-label">MENU</span>
          </button>
        </div>
      </div>
    </div>
  </header>
  
  {% render 'mega-menu' %}
</div>

<style>
.header-wrapper {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  transition: all 0.3s ease;
  background-color: transparent;
  padding: 20px 0;
}

.header-wrapper.scrolled {
  background-color: {{ section.settings.header_bg_color | default: '#ffffff' | color_modify: 'alpha', 0.95 }};
  backdrop-filter: blur(10px);
  box-shadow: 0 2px 20px rgba(0, 0, 0, 0.1);
  padding: 10px 0;
}

.site-header {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 20px;
}

.header-grid {
  display: grid;
  grid-template-columns: 1fr auto 1fr;
  align-items: center;
  gap: 20px;
}

.header-left {
  justify-self: start;
}

.header-center {
  justify-self: center;
}

.header-right {
  justify-self: end;
}

.contact-link {
  color: {{ section.settings.header_text_color_default | default: '#ffffff' }};
  text-decoration: none;
  font-size: 14px;
  letter-spacing: 1px;
  transition: color 0.3s ease;
}

.header-wrapper.scrolled .contact-link {
  color: {{ section.settings.header_text_color | default: '#333333' }};
}

.site-logo .logo-image {
  max-height: 60px;
  width: auto;
  transition: max-height 0.3s ease;
}

.header-wrapper.scrolled .site-logo .logo-image {
  max-height: 40px;
}

.site-name {
  font-size: 24px;
  font-weight: bold;
  color: {{ section.settings.header_text_color_default | default: '#ffffff' }};
  text-decoration: none;
  transition: color 0.3s ease, font-size 0.3s ease;
}

.header-wrapper.scrolled .site-name {
  color: {{ section.settings.header_text_color | default: '#333333' }};
  font-size: 20px;
}

.header-icons {
  display: flex;
  align-items: center;
  gap: 15px;
}

.header-icon {
  color: {{ section.settings.header_text_color_default | default: '#ffffff' }};
  text-decoration: none;
  padding: 8px;
  border: none;
  background: none;
  cursor: pointer;
  transition: color 0.3s ease;
}

.header-wrapper.scrolled .header-icon {
  color: {{ section.settings.header_text_color | default: '#333333' }};
}

.header-icon svg {
  width: 20px;
  height: 20px;
  fill: currentColor;
}

.menu-label {
  font-size: 12px;
  font-weight: bold;
  letter-spacing: 1px;
}

@media (max-width: 768px) {
  .header-grid {
    grid-template-columns: auto 1fr auto;
    gap: 10px;
  }
  
  .header-left {
    order: 1;
  }
  
  .header-center {
    order: 2;
    justify-self: center;
  }
  
  .header-right {
    order: 3;
  }
  
  .contact-link {
    font-size: 12px;
  }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const header = document.querySelector('.header-wrapper');
  let lastScrollTop = 0;
  
  function handleScroll() {
    const scrollTop = window.pageYOffset || document.documentElement.scrollTop;
    
    if (scrollTop > 100) {
      header.classList.add('scrolled');
    } else {
      header.classList.remove('scrolled');
    }
    
    lastScrollTop = scrollTop;
  }
  
  // Throttle scroll events for better performance
  let ticking = false;
  function requestTick() {
    if (!ticking) {
      requestAnimationFrame(handleScroll);
      ticking = true;
      setTimeout(() => { ticking = false; }, 16);
    }
  }
  
  window.addEventListener('scroll', requestTick);
  
  // Initial check in case page is already scrolled
  handleScroll();
});
</script>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo image"
    },
    {
      "type": "range",
      "id": "logo_max_width",
      "min": 50,
      "max": 250,
      "step": 10,
      "unit": "px",
      "label": "Logo width",
      "default": 150
    },
    {
      "type": "header",
      "content": "Scroll Effect Colors"
    },
    {
      "type": "color",
      "id": "header_bg_color",
      "label": "Header background (when scrolled)",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "header_text_color",
      "label": "Text color (when scrolled)",
      "default": "#333333"
    },
    {
      "type": "color",
      "id": "header_text_color_default",
      "label": "Text color (at top)",
      "default": "#ffffff"
    }
  ]
}
{% endschema %}