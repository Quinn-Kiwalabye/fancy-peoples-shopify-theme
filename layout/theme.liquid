<!doctype html>
<html class="no-js" lang="{{ shop.locale }}">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, height=device-height, minimum-scale=1.0, maximum-scale=1.0">
  <meta name="theme-color" content="{{ settings.color_button }}">

  <title>
    {{ page_title }}{% if current_tags %}{% assign meta_tags = current_tags | join: ', ' %} &ndash; {{ meta_tags }}{% endif %}{% if current_page != 1 %} &ndash; Page {{ current_page }}{% endif %}{% unless page_title contains shop.name %} &ndash; {{ shop.name }}{% endunless %}
  </title>

  <link rel="preconnect" href="https://cdn.shopify.com" crossorigin>
  <link rel="preconnect" href="https://fonts.shopifycdn.com" crossorigin>
  <!-- Google Fonts should be self-hosted or use font-display: swap for better performance -->

  {{ content_for_header }}

  <style>
    :root {
      --font-heading-family: 'Cormorant Garamond', serif;
      --font-body-family: 'Cormorant Garamond', serif;
      --font-heading-style: normal;
      --font-heading-weight: 400;
      --font-body-style: normal;
      --font-body-weight: 400;
    }
    
    body {
      font-family: var(--font-body-family);
      font-weight: var(--font-body-weight);
      font-style: var(--font-body-style);
      margin: 0;
      padding: 0;
    }
    
    h1, h2, h3, h4, h5, h6 {
      font-family: var(--font-heading-family);
      font-weight: var(--font-heading-weight);
      font-style: var(--font-heading-style);
    }
    
    .grid {
      display: flex;
      flex-wrap: wrap;
    }
    
    .grid--no-gutters {
      margin-left: 0;
    }
    
    .grid--table {
      align-items: center;
    }
    
    .grid__item {
      padding-left: 30px;
      width: 100%;
      box-sizing: border-box;
    }
    
    .small--one-half {
      width: 50%;
    }
    
    .medium-up--one-quarter {
      width: 25%;
    }
    
    .medium-up--one-half {
      width: 50%;
    }
    
    .text-center {
      text-align: center;
    }
    
    .text-right {
      text-align: right;
    }
    
    @media screen and (max-width: 749px) {
      .medium-up--one-quarter,
      .medium-up--one-half {
        width: 100%;
      }
    }
  </style>

  {{ 'fancy-theme-header.css' | asset_url | stylesheet_tag }}
  <script src="{{ 'theme.js' | asset_url }}" defer></script>
</head>

<body>
  {% section 'header' %}
  
  <main role="main">
    {{ content_for_layout }}
  </main>
  
  {% section 'footer' %}
</body>
</html>